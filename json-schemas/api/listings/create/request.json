{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "/api/listings/create request",
    "description": "A request to create a new listing",
    "type": "object",
    "properties": {
        "positionId": {
            "type": "integer",
            "minimum": 0
        },
        "pay": {
            "type": "number",
            "minimum": 0
        },
        "startTime": {
            "type": "string",
            "pattern": "^([\\+-]?\\d{4}(?!\\d{2}\\b))((-?)((0[1-9]|1[0-2])(\\3([12]\\d|0[1-9]|3[01]))?|W([0-4]\\d|5[0-2])(-?[1-7])?|(00[1-9]|0[1-9]\\d|[12]\\d{2}|3([0-5]\\d|6[1-6])))([T\\s]((([01]\\d|2[0-3])((:?)[0-5]\\d)?|24\\:?00)([\\.,]\\d+(?!:))?)?(\\17[0-5]\\d([\\.,]\\d+)?)?([zZ]|([\\+-])([01]\\d|2[0-3]):?([0-5]\\d)?)?)?)?$"
        },
        "duration": {
            "type": "number",
            "minimum": 0,
            "exclusiveMinimum": true
        },
        "languages": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "uniqueItems": true
        }
    },
    "required": [
        "positionId",
        "pay",
        "startTime",
        "duration",
        "languages"
    ]
}
