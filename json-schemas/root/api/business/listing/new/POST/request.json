{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "/api/listings/create request",
    "description": "A request to create a new listing",
    "type": "object",
    "properties": {
        "positionId": {
            "type": "integer",
            "minimum": 0
        },
        "businessId": {
            "type": "integer",
            "minimum": 0
        },
        "pay": {
            "type": "number",
            "minimum": 0,
            "exclusiveMinimum": true
        },
        "startTime": {
            "type": "string",
            "format": "date-time"
        },
        "duration": {
            "type": "number",
            "minimum": 0,
            "exclusiveMinimum": true
        },
        "languages": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "uniqueItems": true
        }
    },
    "required": [
        "positionId",
        "businessId",
        "pay",
        "startTime",
        "duration",
        "languages"
    ]
}
